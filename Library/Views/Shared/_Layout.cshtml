<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Biblioteca Universitaria</title>

    <!-- Estilos locales y externos -->
    @Styles.Render("~/Content/css")
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Barra de navegación superior -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <!-- Logo con enlace a Inicio -->
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="@Url.Content("~/Content/images/logo.png")" alt="Logo de la Biblioteca"
                     class="d-inline-block align-top" style="height: 40px; width: auto;">
                BIBLIOTECA UNIREMINGTON
            </a>

            <!-- Menú colapsable -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Alternar navegación">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links del menú -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link" href="/Estudiantes">Estudiantes</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Prestamos">Préstamos</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Libros">Libros</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Ayuda">Ayuda</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <!-- Pie de página -->
    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2024 Biblioteca Universitaria. Todos los derechos reservados.</p>
        <p><a href="/Contacto" class="text-white">Contáctanos</a></p>
    </footer>

    <!-- Scripts locales y externos -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

